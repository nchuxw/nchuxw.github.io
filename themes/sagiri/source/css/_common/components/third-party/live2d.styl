.waifu {
  position: fixed;
  bottom: 0px;
  right: 10px;
  z-index: 2;
  font-size: 0;
  pointer-events: none;

  +mobile() {
    display: none;
  }
}

.waifu-tips {
  color: #fff;
  width: 300px;
  transition: 0.5s all;
  bottom: 100%;
  left: -10px;
  text-align: center;
  font-size: 13px;
  font-weight: 400;
}
.waifu-tip-item {
  color: #0089f7;
  font-size: 16px;
  pointer-events: auto;
  border: 1px solid rgba(255, 137, 255, 0.4);
  border-radius: 12px;
  background-color: rgba(255, 137, 255, 0.2);
  box-shadow: 0 3px 15px 2px rgba(255, 137, 255, 0.4);
  animation-duration: 0.5s;
  animation-name: fadeInRight;
  padding: 7px;
  margin-bottom: 20px;
}

.waifu-tool {
  position: fixed;
  display: inline-block;
  color: #aaa;
  bottom: 250px;
  right: 25px;
  font-size: 24px;
  line-height: 30px;
}
.waifu-tool i {
  display: block;
  padding-bottom: 7px;
  cursor: pointer;
  pointer-events: auto;
  color: rgba(255, 137, 255, 0.3);
  transition: 0.2s;
}
.waifu-tool i:hover {
  color: rgba(255, 137, 255, 0.8);
}

.waifu-show {
  position: fixed;
  display: none;
  color: #aaa;
  bottom: 250px;
  right: 25px;
  font-size: 24px;
  line-height: 30px;
}
.waifu-show i {
  display: block;
  padding-bottom: 7px;
  cursor: pointer;
  pointer-events: auto;
  color: rgba(255, 137, 255, 0.3);
  transition: 0.2s;
}
.waifu-show i:hover {
  color: rgba(255, 137, 255, 0.8);
}

.waifu #live2d {
  position: relative;
  bottom: 0;
  right: 0;
  z-index: 5;
  pointer-events: none;
}
