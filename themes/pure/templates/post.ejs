<html>
<head>
    <%- include('./includes/head', { siteTitle: `${post.title} | ${themeConfig.siteName}` }) %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/KaTeX/0.10.0/katex.min.css">
</head>
<body>
<div class="main gt-bg-theme-color-first">
    <%- include('./includes/header') %>
    <div class="post-container">

		<!-- 这个div用来放目录 -->
		<!-- <% if (post.toc) { %>
			<div id="toc_container">
				
			</div>
		<% } %> -->

		<div class="post-detail gt-bg-theme-color-second">
            <article class="gt-post-content">
                <h2 class="post-title">
                    <%= post.title %>
                </h2>
                <div class="post-info">
                    <time class="post-time gt-c-content-color-first">
                        · <%= post.dateFormat %> ·
                    </time>
                    <% post.tags.forEach(function(tag) { %>
                        <a href="<%= tag.link %>" class="post-tags">
                            # <%= tag.name %>
                        </a>
                    <% }); %>
                </div>
                <div class="post-content">
                    <%- post.content %>
                </div>
            </article>
		</div>
		
		<!-- <% if (post.toc) { %>
			<%- include('./includes/post_toc') %>
		<% } %> -->

        <% if (post.nextPost && !post.hideInList) { %>
            <div class="next-post">
                <div class="next gt-c-content-color-first">下一篇</div>
                <a href="<%= post.nextPost.link %>" class="post-title gt-a-link">
                    <%= post.nextPost.title %>
                </a>
            </div>
        <% } %>

		<%- include('./includes/gitalk') %>
        <% if (typeof commentSetting !== 'undefined' && commentSetting.showComment) { %>
            <% if (commentSetting.commentPlatform === 'gitalk') { %>
                <%- include('./includes/gitalk') %>
            <% } %>

            <% if (commentSetting.commentPlatform === 'disqus') { %>
                <%- include('./includes/disqus') %>
            <% } %>
        <% } %>

        <%- include('./includes/footer') %>

    </div>
</div>
</body>
<script>
	var post_links = document.getElementsByClassName("post-content")[0].getElementsByTagName("a");
	var local_link = window.location.href;
	for(var i = 0; i < post_links.length; i++){
		if(post_links[i].href.startsWith(local_link) == false)
		{
			post_links[i].setAttribute("target","_blank");
		}
	}
</script>
</html>
